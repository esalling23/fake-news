<div class="profiles glide" id="level-slider">

    <div class="glide__bullets"></div>

	<div class="glide__wrapper">
		<ul class="glide__track">

			<li class="glide__slide">
				<div class="profile-group level-one">
					<h3>Level One</h3>
					{{#each profile}}
						{{#ifeq this.level '1'}}
						<div class="profile-select">
							<div class="profile-image">
								<img src="{{{cloudinaryUrl this.image width="100" height="100"}}}"><h3>{{this.name}}</h3>
								{{{this.bio.html}}}
							</div>
						</div>
						{{/ifeq}}
					{{/each}}
				</div>
			</li>

			<li class="glide__slide">
				<div class="profile-group level-two">
					<h3>Level Two</h3>
					{{#each profile}}
						{{#ifeq this.level '2'}}
						<div class="profile-select">
							<div class="profile-image">
								<img src="{{{cloudinaryUrl this.image width="100" height="100"}}}"><h3>{{this.name}}</h3>
							</div>
						</div>
						{{/ifeq}}
					{{/each}}
				</div>
			</li>

			<li class="glide__slide">
				<div class="profile-group level-three">
					<h3>Level Three</h3>
					{{#each profile}}
						{{#ifeq this.level '3'}}
						<div class="profile-select" id={{this.key}}>
							<div class="profile-image">
								<img src="{{{cloudinaryUrl this.image width="100" height="100"}}}"><h3>{{this.name}}</h3>
							</div>
						</div>
						{{/ifeq}}
					{{/each}}
				</div>
			</li>

		</ul>
	</div>

	<div class="glide__arrows">
        <button class="glide__arrow prev" data-glide-dir="<">prev</button>
        <button class="glide__arrow next" data-glide-dir=">">next</button>
    </div>


</div>